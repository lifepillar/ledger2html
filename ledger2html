    :register_dc => '%(date > today ? "<span class=\"future date\">" : "<span class=\"date\">")' +
      '%(justify(format_date(date), int(date_width)))</span>' +
      '%(!cleared and actual ? "<span class=\"pending payee\">" : "<span class=\"payee\">")' +
